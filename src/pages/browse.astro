---
title: "Browse Exercises";
description: "Provides selection of options to browse exercises based on muscle groups and equipment.";

import BaseLayout from "../layouts/BaseLayout.astro";
import BackToTop from "../components/BackToTop.astro";
---

<BaseLayout>
  <div slot="main" class="container mt-5">
    <div class="title-button-container">
      <h1 class="display-4">Browse Exercises</h1>
      <img src="/images/running-croissant2.png" alt="running croissant" loading="eager"/>
    </div>
    <div class="container-fluid container-background">
      <h4
        class="bg-secondary text-white px-2 py-1 rounded"
        style="display: inline-block;"
      >
        Muscle groups
      </h4>
      <div class="exercise-options">
        <div class="exercise-option-container">
          <img
            src="/images/abs.png"
            alt="abdominals"
            class="exercise-option custom-rounded"
            data-option="abdominals"
            loading="lazy"
          />
          <div class="overlay-text">Abdominals</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/biceps.png"
            alt="biceps"
            class="exercise-option custom-rounded"
            data-option="biceps"
            loading="eager"
          />
          <div class="overlay-text">Biceps</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/chest.png"
            alt="chest"
            class="exercise-option custom-rounded"
            data-option="chest"
            loading="eager"
          />
          <div class="overlay-text">Chest</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/glutes.png"
            alt="Glutes"
            class="exercise-option custom-rounded"
            data-option="glutes"
            loading="lazy"
          />
          <div class="overlay-text">Glutes</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/hamstrings.png"
            alt="Hamstrings"
            class="exercise-option custom-rounded"
            data-option="hamstrings"
            loading="lazy"
          />
          <div class="overlay-text">Hamstrings</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/browseAll.png"
            alt="Browse All"
            class="exercise-option custom-rounded"
            data-option=""
            loading="lazy"
          />
          <div class="overlay-text">Browse All</div>
        </div>
      </div>
    </div>
    <div class="container-fluid container-background">
      <h4
        class="bg-secondary text-white px-2 py-1 rounded"
        style="display: inline-block;"
      >
        Exercise Types
      </h4>
      <div class="exercise-options">
        <div class="exercise-option-container">
          <img
            src="/images/strength.png"
            alt="Strength"
            class="exercise-option custom-rounded"
            data-option="strength"
            loading="lazy"
          />
          <div class="overlay-text">Strength</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/stretching.png"
            alt="Stretching"
            class="exercise-option custom-rounded"
            data-option="stretching"
            loading="lazy"
          />
          <div class="overlay-text">Stretching</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/plyometrics.png"
            alt="Plyometrics"
            class="exercise-option custom-rounded"
            data-option="plyometrics"
            loading="lazy"
          />
          <div class="overlay-text">Plyometrics</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/strongman.png"
            alt="Strongman"
            class="exercise-option custom-rounded"
            data-option="strongman"
            loading="lazy"
          />
          <div class="overlay-text">Strongman</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/images/cardio.png"
            alt="Cardio"
            class="exercise-option custom-rounded"
            data-option="cardio"
            loading="lazy"
          />
          <div class="overlay-text">Cardio</div>
        </div>
      </div>
    </div>
     <BackToTop />
  </div>
</BaseLayout>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".exercise-option").forEach((img) => {
      img.addEventListener("click", function (event) {
        const target = event.target as HTMLElement;
        if (!target) return;
        const selectedOption = target.getAttribute("data-option");
        console.log(selectedOption);

        // Save the selected option to session storage
        sessionStorage.setItem("selectedOption", selectedOption ?? "");
        window.location.href = "/exercises";
      });
    });
  });
</script>
