---
title: "Browse Exercises";
description: "Provides selection of options to browse exercises based on muscle groups and exercise type.";

import BaseLayout from "../layouts/BaseLayout.astro";
import BackToTop from "../components/BackToTop.astro";
---

<BaseLayout>
  <div slot="main" class="container mt-5">
    <!-- Page title and header image -->
    <div class="header-title-actions">
      <h1 class="display-4">Browse Exercises</h1>
      <img src="/Pastry-Chasers-Main/images/running-croissant2.png" alt="running croissant" loading="eager"/>
    </div>
    <!-- Section: Muscle group options -->
    <div class="container-fluid section-background">
      <h4
        class="bg-secondary text-white px-2 py-1 rounded"
        style="display: inline-block;"
      >
        Muscle groups
      </h4>
      <div class="exercise-options">
        <!-- Each option is an image with overlay text and a data-option attribute -->
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/abs.png"
            alt="abdominals"
            class="exercise-option rounded-corners"
            data-option="abdominals"
            loading="lazy"
          />
          <div class="overlay-text">Abdominals</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/biceps.png"
            alt="biceps"
            class="exercise-option rounded-corners"
            data-option="biceps"
            loading="eager"
          />
          <div class="overlay-text">Biceps</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/chest.png"
            alt="chest"
            class="exercise-option rounded-corners"
            data-option="chest"
            loading="eager"
          />
          <div class="overlay-text">Chest</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/glutes.png"
            alt="Glutes"
            class="exercise-option rounded-corners"
            data-option="glutes"
            loading="lazy"
          />
          <div class="overlay-text">Glutes</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/hamstrings.png"
            alt="Hamstrings"
            class="exercise-option rounded-corners"
            data-option="hamstrings"
            loading="lazy"
          />
          <div class="overlay-text">Hamstrings</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/browseAll.png"
            alt="Browse All"
            class="exercise-option rounded-corners"
            data-option=""
            loading="lazy"
          />
          <div class="overlay-text">Browse All</div>
        </div>
      </div>
    </div>

    <!-- Section: Exercise type options -->
    <div class="container-fluid section-background">
      <h4
        class="bg-secondary text-white px-2 py-1 rounded"
        style="display: inline-block;"
      >
        Exercise Types
      </h4>
      <div class="exercise-options">
        <!-- Each option is an image with overlay text and a data-option attribute -->
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/strength.png"
            alt="Strength"
            class="exercise-option rounded-corners"
            data-option="strength"
            loading="lazy"
          />
          <div class="overlay-text">Strength</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/stretching.png"
            alt="Stretching"
            class="exercise-option rounded-corners"
            data-option="stretching"
            loading="lazy"
          />
          <div class="overlay-text">Stretching</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/plyometrics.png"
            alt="Plyometrics"
            class="exercise-option rounded-corners"
            data-option="plyometrics"
            loading="lazy"
          />
          <div class="overlay-text">Plyometrics</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/strongman.png"
            alt="Strongman"
            class="exercise-option rounded-corners"
            data-option="strongman"
            loading="lazy"
          />
          <div class="overlay-text">Strongman</div>
        </div>
        <div class="exercise-option-container">
          <img
            src="/Pastry-Chasers-Main/images/cardio.png"
            alt="Cardio"
            class="exercise-option rounded-corners"
            data-option="cardio"
            loading="lazy"
          />
          <div class="overlay-text">Cardio</div>
        </div>
      </div>
    </div>
    <!-- Back to top button for easy navigation -->
    <BackToTop />
  </div>
</BaseLayout>

<script>
  // Wait for DOM to be loaded before adding event listeners
  document.addEventListener("DOMContentLoaded", function () {
    // Add click event to each exercise option image
    document.querySelectorAll(".exercise-option").forEach((img) => {
      img.addEventListener("click", function (event) {
        const target = event.target as HTMLElement;
        if (!target) return;
        // Get the selected option from data-option attribute
        const selectedOption = target.getAttribute("data-option");
        console.log(selectedOption);
        // Save the selected option to session storage for use on the next page
        sessionStorage.setItem("selectedOption", selectedOption ?? "");
        // Redirect to the exercises page to show filtered results
        window.location.href = "/Pastry-Chasers-Main/exercises";
      });
    });
  });
</script>
