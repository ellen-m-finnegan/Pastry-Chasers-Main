---
title: 'Back to top button'
description: 'Button that scrolls to the top of the page.'
---

<button type="button" class="btn btn-back-to-top" id="btn-back-to-top">
            <img
            src="/Pastry-Chasers-Main/images/back-to-top.png"
            alt="Back to top arrow"
          />
</button>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get the button
    const mybutton = document.getElementById("btn-back-to-top");

    window.onscroll = function() {
      scrollFunction();
    };

    function scrollFunction() {
      if (!mybutton) return;
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        mybutton.style.display = "block";
      } else {
        mybutton.style.display = "none";
      }
    }

    // When the button is clicked, scroll to top
    if (mybutton) {
      mybutton.addEventListener("click", function() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
      });
    }
  });
</script>
