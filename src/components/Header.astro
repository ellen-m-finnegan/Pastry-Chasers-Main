<header style="background-color: #F8E4B8;">
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <a class="navbar-brand ms-2 header-title" href="/">
        Pastry Chasers <img 
            src="./images/running-croissant.png"
            alt="pastry icon"
            class="detail-icon" 
            />
        </a>

        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="./">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./browse">Browse Exercises</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../searchResults">Search for Exercises</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./favourites">My Favourites</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./about">About Pastry Chasers</a>
                </li>
            </ul>
             <form class="d-flex ms-auto" id="searchForm">
                <input
                    class="form-control me-2"
                    type="search"
                    placeholder="Search..."
                    aria-label="Search"
                    id="searchQuery"
                />
            <button class="btn primary-button me-2" type="submit">Search</button>
        </form>
        </div>
    </nav>
</header>
<script>
    // Ensure this code runs only in the browser
    if (typeof window !== 'undefined') {
        // Get the search form element by its ID
        const form = document.getElementById('searchForm');
        // Add a submit event listener to the form
        form?.addEventListener('submit', function(e) { // Prevent default form submission
            // Get the trimmed value from the search input
            e.preventDefault();
            const query = (document.getElementById('searchQuery') as HTMLInputElement)?.value.trim();
            // If query is not empty, redirect to the search results page with the query as a URL parameter
            if (query) {
                window.location.href = `/searchResults?query=${encodeURIComponent(query)}`;
            }
        });
    }
</script>