---
// BaseLayout.astro: Main layout for the site, wraps all pages
title: "Base Layout";
description: "This is the base layout for the site.";

import "../styles/custom.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pastry Chasers</title>
    <!-- Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Site favicon -->
    <link rel="icon" type="image/x-icon" href="/images/running-croissant.png" />
  </head>
  <body>
    <!-- Site header/navigation -->
    <Header />

    <main class="container mt-5">
      <!-- Named slot for injecting page content -->
      <slot name="main" />
    </main>
    
    <!-- Site footer -->
    <Footer />

    <!-- Script for handling search form submission and storing query in sessionStorage -->
    <script>
      const searchForm = document.getElementById("searchForm");
      if (searchForm) {
        searchForm.addEventListener("submit", function (e) {
          e.preventDefault();
          // Get the search query from the input field
          const query = (
            document.getElementById("searchQuery") as HTMLInputElement
          ).value;
          if (query) {
            // Store the query in sessionStorage and redirect to results page
            sessionStorage.setItem("searchQuery", query);
            window.location.href = "/searchResults";
          }
        });
      }
    </script>
    <!-- Bootstrap JS bundle for interactive components -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
